---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Name } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`404 Not Found - ${Name}`} description="Page not found" />
  </head>
  <body>
    <Header />
    <main class="container">
      <h1>404</h1>
      <p>Oops! The page you are looking for does not exist.</p>
      <a href="/" class="home-link btn">Go back home</a>
    </main>
    <Footer />
  </body>
</html>

<style>
  .container {
    text-align: center;
    padding: 100px 20px;
  }

  h1 {
    font-size: 5rem;
    margin: 0;
  }

  p {
    font-size: 1.2rem;
    color: var(--text-muted);
  }

  .home-link {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 1rem;
  }

</style>
