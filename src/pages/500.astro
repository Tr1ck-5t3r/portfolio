---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Icon } from '@astrojs/starlight/components';
import { SOCIAL_MEDIA as sc } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`500 Internal Server Error `} description="Internal Server error" />
  </head>
  <body>
    <Header />
    <main class="container">
      <h1>500</h1>
      <p>Oops! Server Error.</p>
      <a href="/" class="home-link btn">Go back home</a>
      <p>In the meantime, you can check out</p>
      <div class="social-links">
        <a href={sc.github} target="_blank" aria-label="GitHub">
          <button class="btn">
            <Icon name="github" />
            Github
          </button>
        </a>
        <a href={sc.linkedin} target="_blank" aria-label="LinkedIn">
          <button class="btn">
            <Icon name="linkedin" />
            Linkedin
          </button>
        </a>
        <a href={`mailto:${sc.email}`} aria-label="Email">
          <button class="btn">
            <Icon name="email" />
            Email
          </button>
        </a>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .container {
    text-align: center;
    padding: 100px 20px;
  }

  h1 {
    font-size: 5rem;
    margin: 0;
  }

  p {
    font-size: 1.2rem;
    color: var(--text-muted);
  }

  .home-link {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 1rem;
  }
</style>
